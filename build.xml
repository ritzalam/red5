			<manifest>
				<attribute name="Built-By" value="RED5 Project - red5@osflash.org" />
                <attribute name="Built-On" value="${build.TODAY}" />
			</manifest>
		</war>
	</target>
	
	<target name="all" depends="clean, prepare, compile, jar, javadoc"/>

