<mx:FormItem xmlns:mx="http://www.adobe.com/2006/mxml"
		     xmlns:view="org.red5.samples.echo.view.*">
	
	<mx:Script>
		<![CDATA[
			[Bindable]
			public var username	: String;
			
			[Bindable]
			public var password	: String;
			
		]]>
	</mx:Script>
	
	<mx:HBox width="100%">
		<mx:Label text="Username"/>
		<mx:TextInput id="username_txt" width="268" text="{username}"/>
		<mx:Label text="Password " width="65"/>
		<mx:TextInput id="password_txt" displayAsPassword="true" 
					  width="100%" text="{password}"/>
	</mx:HBox>

</mx:FormItem>