<?xml version="1.0" encoding="utf-8"?>
<view:PublisherClass width="100%" direction="vertical" 
					 paddingBottom="0" horizontalGap="6"
					 xmlns:mx="http://www.adobe.com/2006/mxml"
					 xmlns:view="org.red5.samples.publisher.view.*">
	
	 <mx:Box direction="horizontal" width="100%" height="100%">
	 
		 <view:MonitorPod id="monitorPod"
						  width="320" height="100%"
						  direction="vertical" verticalGap="-1"
						  paddingRight="0" paddingBottom="0"
						  monitorTransaction="{ monitorTransaction }"/>
			
		 <view:LogPod id="logPod" 
					  width="100%" height="{ monitorPod.height }"
				 	  verticalGap="0" direction="vertical"
					  monitorTransaction="{ monitorTransaction }"/>
	 </mx:Box>
	 
</view:PublisherClass>
