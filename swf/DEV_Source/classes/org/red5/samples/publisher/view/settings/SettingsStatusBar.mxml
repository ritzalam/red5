<?xml version="1.0" encoding="utf-8"?>
<view:SettingsStatusBarClass xmlns:mx="http://www.adobe.com/2006/mxml"
							 xmlns:view="org.red5.samples.publisher.view.settings.*">
							 
	<mx:ViewStack width="100%" height="100%" selectedIndex="{ monitorTransaction.settingsViewing }">
	
		<!-- server monitor -->
		<view:StatusBar labelText="{ monitorTransaction.serverStatusMessage }"
						labelImage="{ monitorTransaction.images.serverStatusImage }"/>
		
		<!-- video monitor -->
		<view:StatusBar labelText="{ monitorTransaction.videoStatusMessage }"
						labelImage="{ monitorTransaction.images.videoStatusImage }"/>

		<!-- audio monitor -->
		<view:StatusBar labelText="{ monitorTransaction.audioStatusMessage }"
						labelImage="{ monitorTransaction.images.audioStatusImage }"/>
		
	</mx:ViewStack>
	
</view:SettingsStatusBarClass>